    document.getElementById("calcBtn").addEventListener("click", function() {
        
        const birthDate = document.getElementById("birthDate").value;
        if (!birthDate) {
            alert("è«‹å…ˆè¼¸å…¥ç‹—ç‹—çš„å‡ºç”Ÿå¹´æœˆæ—¥ï¼");
            return;
