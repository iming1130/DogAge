        const today = new Date();
        const bday = new Date(birthDate);

        // è¨ˆç®—ç‹—ç‹—çœŸå¯¦å¹´é½¡ï¼ˆä»¥å¹´ç‚ºå–®ä½ï¼‰
        let dogYears = (today - bday) / (1000 * 60 * 60 * 24 * 365);

        if (dogYears < 0) {
            alert("å‡ºç”Ÿæ—¥æœŸä¸èƒ½æ˜¯æœªä¾†ï¼");
